#include "main.h"

/**
*print_diagonal - Compute the absolute value of an integer
*@n : - variable
* Return: The absolute value
*/

void print_triangle(int size)
	{
	int a, b;

	if (size > 0)
	{
		for (a = 0; a <= size; a++)
		{
			for (b = 1; b <= a; b++)
			{
				if (b != a)
				_putchar(' ');
				else if (b == a)
				{
					_putchar('#');
					_putchar('\n');
				}
			}
		}
	}
	else
	_putchar('\n');
}
